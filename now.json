{
    "version": 2,
    "name": "event-app",
    "env": {
        "APP_URL": "@app_url",
        "VKONTAKTE_APP_ID": "@vkontakte_app_id",
        "VKONTAKTE_APP_SECRET": "@vkontakte_app_secret",
        "KEY": "@key"
    },
    "builds": [
        {
            "src": "package.json",
            "use": "@now/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "app.js",
            "use": "@now/node-server"
        }
    ],
    "routes": [
        {
            "src": "/api",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        },
        {
            "src": "/auth/vkontakte(/callback|)",
            "dest": "/app.js",
            "methods": [
                "GET"
            ]
        }
    ]
}
